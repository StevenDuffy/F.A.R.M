<Window x:Class="F.A.R.M.MainWindow" Name="Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F.A.R.M"
        mc:Ignorable="d"
        Title="Farming and Agricultural Resource Management" Height="350" Width="525" Icon="Icon.png">
    <Grid>
        <TabControl TabStripPlacement="Left">

            <TabItem Header="Calender">
                <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Calendar SelectionMode="SingleRange" HorizontalAlignment="Left" Margin="10"/>
                    <StackPanel>
                        <Label Content="Start Date:" FontWeight="Bold" Margin="10,0"></Label>
                        <TextBox Width="120"  HorizontalAlignment="Left" Margin="10,0"></TextBox>
                        <Label Content="End Date:" FontWeight="Bold" Margin="10,0"></Label>
                        <TextBox Width="120"  HorizontalAlignment="Left" Margin="10,0"></TextBox>
                            <Button Content="Submit" Width="50" HorizontalAlignment="Right" Margin="10"></Button>
                    </StackPanel>
                </StackPanel>
                    <DataGrid Margin="10"></DataGrid>
                </StackPanel>




            </TabItem>

            <TabItem Header="Stock Control">
                <TabControl>
                    <TabItem Header="Crops"></TabItem>
                    <TabItem Header="Fertiliser"></TabItem>
                    <TabItem Header="Containers"></TabItem>
                </TabControl>
            </TabItem>

            <TabItem Header="Create Job"></TabItem>
            <TabItem Header="Data Management"></TabItem>

            <TabItem Header="Logout" >
                <StackPanel>
                    <Label Content="Are you sure you wish to log out?" HorizontalAlignment="Center" Margin="0,50,0,10" FontSize="16"></Label>
                    <Button x:Name="logout" Content="Log out" Width="70"></Button>
                </StackPanel>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
